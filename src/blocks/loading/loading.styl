$loading-spinner-width = 70px
$loading-spinner-height = 60px

.loading {
    position: fixed;
    left: 0;
    right: 0;
    top: $header-height + 1px;
    bottom: 0;
    background: rgba(255,255,255, 0.9);

    z-index: 1;
    animation-m(loading-show .3s ease-in-out);

    &_hidden {
        visibility: hidden;
        animation-m(loading-hide .3s ease-in-out);
    }

    &__spinner {
        display: inline-block;
        width: $loading-spinner-width;
        height: $loading-spinner-height;
        text-align: center;
        margin-left: (- $loading-spinner-width / 2);
        margin-top: (- $loading-spinner-height / 2) - $header-height;
        position: absolute;
        left: 50%;
        top: 50%;
    }

    &__spinner-item {
        display: inline-block;
        height: 100%;
        width: 8px;
        margin: 0 3px 0 0;
        background-color: $border;

        -webkit-animation: loading-stretch 0.8s infinite ease-in-out;
        animation: loading-stretch 0.8s infinite ease-in-out;
    }

    &__spinner-item_2 {
        animation-delay-m(-0.7s);
    }
    &__spinner-item_3 {
        animation-delay-m(-0.6s);
    }
    &__spinner-item_4 {
        animation-delay-m(-0.5s);
    }
    &__spinner-item_5 {
        animation-delay-m(-0.4s);
    }
}

@-webkit-keyframes loading-stretch {
  0%, 40%, 100% {
      transform-m(scaleY(0.5));
  } 20% {
      transform-m(scaleY(1.0));
  }
}

@keyframes loading-stretch {
  0%, 40%, 100% {
      transform-m(scaleY(0.5));
  } 20% {
      transform-m(scaleY(1.0));
  }
}

@keyframes loading-show {
    0% {
        visibility: hidden;
        height: auto;
        opacity: 0;
    } 1% {
        visibility: visible;
        height: auto;
        opacity: 0;
    } 100% {
        visibility: visible;
        height: auto;
        opacity: 1;
    }
}

@keyframes loading-hide {
    0% {
        height: auto;
        visibility: visible;
        opacity: 1;
    } 99% {
        height: auto;
        visibility: visible;
        opacity: 0;
    } 100% {
        height: 0;
        visibility: hidden;
        opacity: 0;
    }
}
