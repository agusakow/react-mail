.header {
    position: relative;
    height: $header-height;

    //border-bottom: 1px solid $foreground-active;
    box-shadow: 0px 2px 6px 0 rgba(22,22,22,0.08);
    z-index: 1;

    &__left {
        display: inline-block;
        position: absolute;
        left 0;
        top: 0;
        line-height: $header-height;
        padding: 0 30px;
    }

    &__center {
        display: block;
        text-align: center;
        line-height: $header-height;
    }

    &__logo {
        color: $foreground;
        font: $font-h4;
        font-family: Textbook,'Textbook New Light', $font-family;
        font-weight: bold;
        letter-spacing: 4px;
        vertical-align: sub;
        text-transform: uppercase;
        cursor: pointer;
    }

    &__search-wrapper {
        position: relative;
        display: inline-block;
        line-height: initial;
        & .icon {
            position: absolute;
            right: 0;
            top: 4px;
        }
    }

    &__search {
        width: 200px;
        border: none;
        box-shadow: none;
        border-bottom: 1px solid $border-pale;
        font: $font-h3;
        color: $foreground;
        padding: 5px 24px 5px 8px;
        transition-m(border-color .3s ease-out);

        &:active,
        &:focus {
            border-color: $border;
        }

        &::-webkit-input-placeholder {
            color: $foreground-muted;
            font-size: 15px;
        }
        &::-moz-placeholder {
            color: $foreground-muted;
            font-size: 15px;
        }
        &:-moz-placeholder {
            color: $foreground-muted;
            font-size: 15px;
        }
        &:-ms-input-placeholder {
            color: $foreground-muted;
            font-size: 15px;
        }
    }
}
