.button {
    border: none;
    background: transparent;
    box-shadow: none;
    cursor: pointer;

    transition-m(opacity .15s ease-out \, background .15s ease-out);

    & .icon {
        opacity: 0.6;
        transition-m(opacity .15s ease-out);
    }

    &:hover {
        background: $button-hover;
        & .icon {
            opacity: 1;
        }
    }

    &:active {
        background: $button-active;
    }

    &_round {
        width: 36px;
        height: 36px;
        border-radius: 50%;

        & .icon {
            width: 100%;
            height: 100%;
            background-size: auto;
        }
    }

    &_action {
        background: $button-action;
        box-shadow: 0 2px 6px 0 rgba(0,0,0,0.2);
        & .icon {
            opacity: 0.9;
        }
        &:hover {
            background: $button-action-hover;
        }
        &:active {
            background: $button-action-active;
        }
    }
}
