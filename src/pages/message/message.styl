.page-message {
    &__header {
        position: relative;
    }

    &__info {
        padding: 6px 20px 8px 60px;
        margin-bottom: 20px;
    }

    &__title {
        font: $font-h4;
    }

    &__from {
        color: $foreground-muted;
    }

    & .avatar {
        position: absolute;
        left: 0;
        right: 0;
    }

    &__line {
        display: block;
        margin: 0 60px;
        border-bottom: 1px solid $border-pale;
    }

    &__content {
        margin: 40px 60px;
    }
}
